<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-5.0.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">

    <!--   Sequence account_info_seq  -->
    <changeSet id="1764746324188-1" author="Ali Hilal">
        <createSequence incrementBy="1" schemaName="account" sequenceName="account_info_seq" startValue="1"/>
    </changeSet>

    <!--    Table account_info-->
    <changeSet id="1764746324188-2" author="Ali Hilal">
        <createTable schemaName="account" tableName="account_info">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_account_info"/>
            </column>
            <column name="account_number" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="first_name" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="middle_name" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(255)"/>
            <column name="mobile" type="VARCHAR(12)">
                <constraints nullable="false"/>
            </column>
            <column name="identification_number" type="VARCHAR(15)">
                <constraints nullable="false"/>
            </column>
            <column name="creation_date" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="update_date" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="identification_type_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="account_type_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="account_role_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="account_status_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <!--     Constraint uc_account_info_account_number -->
    <changeSet id="1764746324188-3" author="Ali Hilal">
        <addUniqueConstraint columnNames="account_number" constraintName="uc_account_info_account_number"
                             schemaName="account" tableName="account_info"/>
    </changeSet>

    <!--    Index idx_account_number-->
    <changeSet id="1764746324188-4" author="Ali Hilal">
        <createIndex indexName="idx_account_number" schemaName="account" tableName="account_info">
            <column name="account_number"/>
        </createIndex>
    </changeSet>

    <!--    Foreign Key Constraint account_role_id -->
    <changeSet id="1764746324188-5" author="Ali Hilal">
        <addForeignKeyConstraint baseColumnNames="account_role_id" baseTableName="account_info"
                                 baseTableSchemaName="account" constraintName="FK_ACCOUNT_INFO_ON_ACCOUNT_ROLE"
                                 referencedColumnNames="id" referencedTableName="account_role_lookup"
                                 referencedTableSchemaName="account"/>
    </changeSet>

    <!--    Foreign Key Constraint account_status_id -->
    <changeSet id="1764746324188-6" author="Ali Hilal">
        <addForeignKeyConstraint baseColumnNames="account_status_id" baseTableName="account_info"
                                 baseTableSchemaName="account" constraintName="FK_ACCOUNT_INFO_ON_ACCOUNT_STATUS"
                                 referencedColumnNames="id" referencedTableName="account_status_lookup"
                                 referencedTableSchemaName="account"/>
    </changeSet>

    <!--    Foreign Key Constraint account_type_id -->
    <changeSet id="1764746324188-7" author="Ali Hilal">
        <addForeignKeyConstraint baseColumnNames="account_type_id" baseTableName="account_info"
                                 baseTableSchemaName="account" constraintName="FK_ACCOUNT_INFO_ON_ACCOUNT_TYPE"
                                 referencedColumnNames="id" referencedTableName="account_type_lookup"
                                 referencedTableSchemaName="account"/>
    </changeSet>

    <!--    Foreign Key Constraint identification_type_id -->
    <changeSet id="1764746324188-8" author="Ali Hilal">
        <addForeignKeyConstraint baseColumnNames="identification_type_id" baseTableName="account_info"
                                 baseTableSchemaName="account" constraintName="FK_ACCOUNT_INFO_ON_IDENTIFICATION_TYPE"
                                 referencedColumnNames="id" referencedTableName="identification_type_lookup"
                                 referencedTableSchemaName="account"/>
    </changeSet>

</databaseChangeLog>